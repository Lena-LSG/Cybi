{
  "name": "hearth-bot",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Modern Discord moderation & utility bot (placeholder name).",
  "main": "dist/bot.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/bot.ts",
    "build": "tsup",
    "start": "node --env-file=.env dist/bot.js",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "deploy:guild": "tsx --env-file=.env src/scripts/deploy-commands.ts --scope=guild",
    "deploy:global": "tsx --env-file=.env src/scripts/deploy-commands.ts --scope=global"
  },
  "keywords": [
    "discord",
    "bot",
    "moderation"
  ],
  "author": "Lazada",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "discord.js": "^14.24.2",
    "dotenv": "^17.2.3",
    "pino": "^10.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
