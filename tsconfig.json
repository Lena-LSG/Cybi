{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["src", "vitest.config.ts"],
	"exclude": ["dist", "node_modules"]
}
